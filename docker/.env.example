# Environment
ENV=production
LOG_LEVEL=info
LOG_PRETTY=false

# API Configuration
API_TIMEOUT=30s
API_RATE_LIMIT=100

# Monitoring
METRICS_ENABLED=true
TRACING_ENABLED=true