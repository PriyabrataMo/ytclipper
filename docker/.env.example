# Replace with your actual MongoDB Atlas connection string
MONGO_URI=
MONGO_URI_TEST=

# Database names
DB_NAME=ytclipper
DB_NAME_TEST=ytclipper_test

# Generate strong random strings (minimum 32 characters)
JWT_SECRET=your_very_long_and_secure_jwt_secret_here_minimum_32_characters
