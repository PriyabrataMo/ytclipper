// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // uses connection pooling
}

model Waitlist {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  source    String? // optional
  metadata  Json?
  createdAt DateTime @default(now())
}
